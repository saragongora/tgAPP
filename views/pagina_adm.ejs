<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <title>Painel Administrativo</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/search.css">
  <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>

  <div class="header">
    <a href="home.ejs">
      <img src="/images/logoFatec.png" alt="Logo Fatec" style="height: 40px;">
    </a>

    <div class="header-buttons">
      <a href="/add-registro" class="btn-header">Adicionar novo registro</a>
      <a href="/logout" class="btn-header logout">Sair</a>
    </div>
  </div>

  <div class="sub-header">
    Faculdade de Tecnologia José Crespo Gonzales
  </div>

  <div class="search-container" id="searchArea">
    <label for="termo">BUSCAR POR TRABALHOS DE GRADUAÇÃO QUE DESEJA GERENCIAR</label>

    <p class="sub-text">Pesquise por trabalhos, alunos ou orientadores</p>

    <form action="/buscar" method="GET" class="search-bar" id="searchForm">
      <input type="text" id="termo" name="termo" required>
      <span class="search-icon" id="searchIcon">
        <img src="/images/icon_lupa.png" alt="Ícone de Lupa" />
      </span>
    </form>
  </div>

  <% if (buscaRealizada && termo && resultados && resultados.length> 0) { %>
    <div class="linha-mensagem">
      <p class="mensagem-resultado">
        Resultados de pesquisa para: <strong>
          <%= termo %>
        </strong>
      </p>
      <a href="#" class="link-filtrar" onclick="abrirModalFiltro()">Filtrar</a>
    </div>
    <% } %>
      <!-- Modal de filtro -->
      <div id="modal-filtro" class="modal-filtro-overlay" onclick="fecharModalFiltro(event)">
        <div class="modal-filtro-conteudo" onclick="event.stopPropagation()">
          <h3>Filtrar resultados</h3>
          <form method="GET" action="/filtro">
            <input type="hidden" name="termo" value="<%= termo %>">


            <div class="campo-duplo">
              <div class="campo-item">
                <!-- Ano de Conclusão -->
                <label for="ano_conclusao">Ano:</label>
                <select name="ano_conclusao" id="ano_conclusao">
                  <script>
                    const selectAno = document.getElementById('ano_conclusao');
                    const anoAtual = new Date().getFullYear();
                    for (let ano = anoAtual; ano >= 1980; ano--) {
                      const option = document.createElement('option');
                      option.value = ano;
                      option.textContent = ano;
                      selectAno.appendChild(option);
                    }
                  </script>
                </select>
              </div>

              <!-- Semestre -->
              <div class="campo-item">
                <label for="semestre">Semestre:</label>
                <select name="semestre" id="semestre">
                  <option value="">--</option>
                  <option value="1">1</option>
                  <option value="2">2</option>
                </select>
              </div>
            </div>

            <!-- Curso -->
            <label for="curso">Curso:</label>
            <select name="curso" id="curso">
              <option value="">--</option>
              <option value="Análise e Desenvolvimento de Sistemas">Análise e Desenvolvimento de Sistemas</option>
              <option value="Polímeros">Polímeros</option>
              <option value="Eletrônica Automotiva">Eletrônica Automotiva</option>
              <option value="Fabricação Mecânica">Fabricação Mecânica</option>
              <option value="Gestão da Qualidade">Gestão da Qualidade</option>
              <option value="Logística">Logística</option>
              <option value="Manufatura Avançada">Manufatura Avançada</option>
              <option value="Manutenção de Aeronaves">Manutenção de Aeronaves</option>
              <option value="Processos Metalúrgicos">Processos Metalúrgicos</option>
              <option value="Projetos Mecânicos">Projetos Mecânicos</option>
              <option value="Sistemas Biomédicos">Sistemas Biomédicos</option>
            </select>

            <!-- Tipo de Trabalho -->
            <label for="tipo_trabalho">Tipo de Trabalho:</label>
            <select name="tipo_trabalho" id="tipo_trabalho">
              <option value="">--</option>
              <option value="pi">Projeto Integrador</option>
              <option value="tg">TG</option>
              <option value="ic">Iniciação Científica</option>
            </select>

            <a href="/buscar?termo=<%= termo %>" class="btn btn-secondary">Limpar filtros</a>


            <!-- Botões -->
            <div class="botoes-modal">
              <button type="submit">Aplicar Filtro</button>
              
              <button type="button" onclick="fecharModalFiltro()">Cancelar</button>
            </div>
          </form>
        </div>
      </div>


      <div class="resultados">
        <% if (resultados && resultados.length> 0) { %>
          <% resultados.forEach(registro=> { %>
            <div class="card-result">
              <div class="card-header">
                <p class="titulo"><strong>PI - <%= registro.nome_tg %></strong></p>
                <span class="ano-semestre">
                  <%= registro.ano %>-<%= registro.semestre %>
                </span>
              </div>

              <div class="card-body-footer">
                <div class="card-texts">
                  <p>Orientador: <%= registro.orientadores.join(', ') %></p>
              <p>Alunos: <%= registro.alunos.join(' , ') %></p>
              <p>Curso: <%= registro.curso %></p>
            </div>
          
            <div class="card-buttons">
              <a href="/editar/<%= registro.id_tg %>" title="Editar">
                <img src="/images/icon_editar.png" alt="Editar" style="width: 20px; height: 20px;">
              </a>
              <form action="/excluir/<%= registro.id_tg %>" method="POST" style="display:inline;">
                <button type="submit" title="Excluir" onclick="return confirm(' Tem certeza que deseja excluir este registro?');" style="background: none; border: none; padding: 0;">
                      <img src="/images/icon_excluir.png" alt="Excluir" style="width: 20px; height: 20px;">
                      </button>
                      </form>
                </div>

              </div>

            </div>


            <% }) %>
              <% } else { %>
                <% if (buscaRealizada) { %>
                  <p>Nenhum resultado encontrado.</p>
                  <% } %>
                    <% } %>
      </div>


      <script src="/js/procurar.js"></script>
</body>

</html>